<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_message_outer"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:background="@android:color/transparent"
    >

    <TextView
        android:id="@+id/message_margin_left"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        />

    <LinearLayout
        android:id="@+id/layout_message_inner"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:background="@android:color/transparent"
        >

        <TextView
            android:id="@+id/tv_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            android:textColor="#909090"
            android:text="21:34"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            >

        <TextView
            android:id="@+id/tv_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:text="Переменная типа boolean"
            />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/message_margin_right"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        />

</LinearLayout>
